{
  "$schema": "http://json.schemastore.org/lerna.json",
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "ignoreChanges": ["**/__?(tests|mocks|snapshots|fixtures)__/**", "**/*.md"],
  "command": {
    "version": {
      "message": "chore(release): publish",
      "allowBranch": "master",
      "preid": "beta",
      "conventionalCommits": true,
      "signGitCommit": true,
      "signGitTag": true,
      "noPrivate": true
    }
  }
}
